<div class="container" style="margin-top: 5%;">
  <div class="row">
    <div class="col-md-4">
    </div>
    <div class="col-md-4">
      <h1 class="text-center">Setting Up Account</h1>
      <br />
      <%= form_tag "/home", method: "post" do %>
        <div class="form-group">
          <%= label_tag :name, "Name" %>
          <%= text_field_tag :name, "", class: "form-control" %>
        </div>

        <div class="form-group">
          <%= label_tag :idnumber, "ID Number" %>
          <%= text_field_tag :idnumber, "", class: "form-control" %>
        </div>

        <div class="form-group">
          <%= label_tag :email, "E-mail" %>
          <%= text_field_tag :email, "", class: "form-control" %>
        </div>

        <div class="form-group">
          <%= label_tag :phone, "Phone Number" %>
          <%= text_field_tag :phone, "", class: "form-control" %>
        </div>

        <%= submit_tag "Submit", class: "btn btn-success btn-block" %>
      <% end %>
    </div>
  </div>
</div>