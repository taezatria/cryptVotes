<div class="container" style="margin-top: 5%;">
  <div class="row">
    <div class="col-sm-4">
    </div>
    <div class="col-md-4">
      <h1 class="text-center">Reset <%= @menu.capitalize %></h1>
      <br/>
      <div class="col-sm-12">
        <div class="tab-content">
<% if @menu == "password" %>
      <div id="tabpassword" class="tab-pane fade in active show">
<% else %>
      <div id="tabpassword" class="tab-pane fade in">
<% end %>
            <%= form_tag "/home/forget", id: "resetPasswordForm", method: "post" do %>
              <div class="form-group">
                <%= label_tag :newpassword, "New Password" %>
                <%= password_field_tag :newpassword, "", class: "form-control password-check", required: true %>
                <div class="invalid-feedback" hidden><span class="fa fa-times"></span> Alphanumeric min 8 characters</div>
                <div class="valid-feedback" hidden><span class="fa fa-check"></span></div>
              </div>
              <div class="form-group">
                <%= label_tag :retypepassword, "Re-type new Password" %>
                <%= password_field_tag :retypepassword, "", class: "form-control password-check", required: true %>
                <div class="invalid-feedback" hidden><span class="fa fa-times"></span> Alphanumeric min 8 characters</div>
                <div class="valid-feedback" hidden><span class="fa fa-check"></span></div>
              </div>
              <input type="hidden" name="user_id" id="user_id" value="<%= @user_id %>">

              <%= submit_tag "Submit", class: "btn btn-primary btn-block" %>
            <% end %>
            <br/>
          </div>

<% if @menu == "passphrase" %>
          <div id="tabpassphrase" class="tab-pane fade in active show">
<% else %>
          <div id="tabpassphrase" class="tab-pane fade in">
<% end %>
            <%= form_tag "/home/genkey", id: "resetPassphraseForm", method: "post" do %>
              <div class="form-group">
                <%= label_tag :passphrase, "New Passphrase" %>
                <%= password_field_tag :passphrase, "", class: "form-control", required: true %>
                <div class="invalid-feedback" hidden><span class="fa fa-times"></span> Numeric 6 digits</div>
                <div class="valid-feedback" hidden><span class="fa fa-check"></span></div>
                <small class="text text-info">Note: Your passphrase will used to generate keys and not saved to the system</small>
              </div>
              <input type="hidden" name="user_id" id="user_id" value="<%= @user_id %>">
      
              <%= submit_tag "Submit", class: "btn btn-primary btn-block" %>
            <% end %>
          </div>

        </div>
      </div>
    </div>
  </div>
</div>