<div class="container" style="margin-top: 2%">
	<h2>Vote Result of Ketua BEM 2018</h2>
	<div class="row">
		<div class="col-md-6">
			<h4>Bar Chart</h4>
			<%= bar_chart @data %>
		</div>
		<div class="col-md-6">
			<h4>Pie Chart</h4>
			<%= pie_chart @data %>
		</div>
	</div>
	<br />
	<div class="row" style="margin: 10px 0px;">
		<div class="col-md-6">
			<h4>Table</h4>
		</div>
		<div class="col-md-2">
		</div>
		<div class="col-md-2">
			<button class="btn btn-primary">Download Data</button>
		</div>
	</div>
	<div class="row">
		<table class="table table-hover">
			<thead>
				<tr>
					<th>Number</th>
					<th>Candidate's Name</th>
					<th>Counts</th>
				</tr>
			</thead>
			<tbody>
				<% @data.each do |name,count| %>
					<tr>
						<td>1</td>
						<td><%= name %></td>
						<td><%= count %></td>
					</tr>
				<% end %>
			</tbody>
		</table>
	</div>
</div>