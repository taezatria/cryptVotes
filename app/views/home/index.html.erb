<div class="container" style="margin-top: 5%;">
  <div class="row">
    <div class="col-sm-4"></div>
    <div class="col-md-4">
      <h1 class="text-center">Welcome to CryptVotes</h1>
      <br/>
      <div class="col-sm-12">
        <ul class="nav nav-pills" >
          <li class="" style="width:50%"><a class="btn btn-lg btn-basic" data-toggle="tab" href="#home">Login</a></li>
          <li class="" style="width:48%"><a class=" btn btn-lg btn-basic" data-toggle="tab" href="#menu1">Register</a></li>
        </ul>
        <br/>

        <div class="tab-content">
          <div id="home" class="tab-pane fade in active">
          
            <%= form_tag "/home", method: "post" do %>
              <div class="form-group">
                <%= label_tag :username, "Username" %>
                <%= text_field_tag :username, "", class: "form-control" %>
              </div>

              <div class="form-group">
                <%= label_tag :password, "Password" %>
                <%= password_field_tag :password, "", class: "form-control" %>
              </div>

              <%= submit_tag "Sign In", class: "btn btn-success btn-block" %>
            <% end %>
            <br/>
          </div>

          <div id="menu1" class="tab-pane fade">
            <%= form_tag "#", method: "get" do %>
              <div class="form-group">
                <%= label_tag :email, "Email" %>
                <%= email_field_tag :email, "", class: "form-control" %>
             </div>

             <%= submit_tag "Send Verification Email", class: "btn btn-primary btn-block" %>
            <% end %>
            <br/>

          </div>
        </div>
      </div>
    </div>
  </div>
</div>