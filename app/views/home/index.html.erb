<div class="container" style="margin-top: 5%;">
  <div class="row">
    <div class="col-sm-4">
<% if flash[:error].present? %>
  <%= flash[:error] %>
<% end %>
    </div>
    <div class="col-md-4">
      <h1 class="text-center">Welcome to CryptVotes</h1>
      <br/>
      <div class="col-sm-12">
        <ul class="nav nav-tabs nav-justified" >
          <li class="nav-item"><a class="nav-link active" data-toggle="tab" href="#home">Login</a></li>
          <li class="nav-item"><a class="nav-link" data-toggle="tab" href="#regisemail">Register</a></li>
        </ul>
        <br/>
        <div class="tab-content">
          <div id="home" class="tab-pane fade in active show">
          
            <%= form_tag "/home", method: "post" do %>
              <div class="form-group">
                <%= label_tag :username, "Username" %>
                <%= text_field_tag :username, "", class: "form-control" %>
              </div>

              <div class="form-group">
                <%= label_tag :password, "Password" %>
                <%= password_field_tag :password, "", class: "form-control" %>
              </div>

              <%= submit_tag "Sign In", class: "btn btn-success btn-block" %>
            <% end %>
            <br/>
          </div>

          <div id="register" class="tab-pane fade">
            <%= form_tag "/home/register", method: "post" do %>
              <div class="form-group">
                <%= label_tag :name, "Name" %>
                <%= text_field_tag :name, "", class: "form-control" %>
              </div>
      
              <div class="form-group">
                <%= label_tag :idnumber, "ID Number" %>
                <%= text_field_tag :idnumber, "", class: "form-control" %>
              </div>
      
              <div class="form-group">
                <%= label_tag :email, "E-mail" %>
                <%= text_field_tag :email, "", class: "form-control" %>
              </div>
      
              <div class="form-group">
                <%= label_tag :phone, "Phone Number" %>
                <%= text_field_tag :phone, "", class: "form-control" %>
              </div>
      
              <%= submit_tag "Submit", class: "btn btn-success btn-block" %>
            <% end %>
          </div>

          <div id="regisemail" class="tab-pane fade">
            <%= form_tag "/home/email", method: "post" do %>
              <div class="form-group">
                <%= label_tag :email, "Email" %>
                <%= email_field_tag :email, "", class: "form-control" %>
             </div>

             <%= submit_tag "Send Verification Email", class: "btn btn-primary btn-block" %>
            <% end %>
            <br/>

          </div>
        </div>
      </div>
    </div>
  </div>
</div>