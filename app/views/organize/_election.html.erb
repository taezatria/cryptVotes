<div class="container">
  <div class="row">
    <h1>Elections</h1>
  </div>

  <div class="row" style="margin-bottom: 10px">
    <div class="col-md-10">
    </div>
    <div class="col-md-2">
      <button class="btn btn-basic">
        <span class="fa fa-plus mr-3"></span>
        Add New
      </button>
    </div>
  </div>
  <div class="row">
    <table class="table table-hover table-responsive">
      <thead class="thead-light">
        <tr>
          <th>Name</th>
          <th>Description</th>
          <th>Start Date</th>
          <th>End Date</th>
          <th>Participants</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td>Ketua HIMAINFRA 2018</td>
          <td>Pemilihan ketua himpunan mahasiswa infor SIB 2018</td>
          <td>5 October 2018</td>
          <td>8 October 2018</td>
          <td>189</td>
          <td><button class="btn btn-secondary" data-toggle="modal" data-target="#editModal"><span class="fa fa-edit"></span></button>
          <button class="btn btn-dark" data-toggle="modal" data-target="#deleteModal"><span class="fa fa-trash"></span></button></td>
        </tr>
        <tr>
          <td>Ketua BEM 2018</td>
          <td>Pemilihan ketua Badan Eksekutif Mahasiswa periode 2018</td>
          <td>5 October 2018</td>
          <td>8 October 2018</td>
          <td>2235</td>
          <td><button class="btn btn-secondary"><span class="fa fa-edit"></span></button>
          <button class="btn btn-dark"><span class="fa fa-trash"></span></button></td>
        </tr>
        <tr>
          <td>BPMF 2018</td>
          <td>Pemilihan pengurus BPMF 2018</td>
          <td>5 October 2018</td>
          <td>8 October 2018</td>
          <td>478</td>
          <td><button class="btn btn-secondary"><span class="fa fa-edit"></span></button>
          <button class="btn btn-dark"><span class="fa fa-trash"></span></button></td>
        </tr>
      </tbody>
    </table>
  </div>
</div>

<!-- The Modal Edit -->
<div class="modal fade" id="editModal">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <%= form_tag "#", method: "get" do %>
      <!-- Modal Header -->
      <div class="modal-header">
        <h4 class="modal-title">Edit Election</h4>
        <button type="button" class="close" data-dismiss="modal">&times;</button>
      </div>

      <!-- Modal body -->
      <div class="modal-body">
        <div class="row">
          <div class="col-md-6">
            <div class="form-group">
              <%= label_tag :name, "Name" %>
              <%= text_field_tag :name, "", class: "form-control" %>
            </div>
          </div>
          <div class="col-md-6">
            <div class="form-group">
              <%= label_tag :participants, "Participants" %>
              <%= number_field_tag :participants, "", class: "form-control" %>
            </div>
          </div>
        </div>


          <div class="form-group">
            <%= label_tag :description, "Description" %>
            <%= text_area_tag :description, "", class: "form-control" %>
          </div>

        <div class="row">
          <div class="col-md-6">
            <div class="form-group">
              <%= label_tag :start_date, "Start Date" %>
              <%= date_field :start_date, "", class: "form-control" %>
            </div>
          </div>
          <div class="col-md-6">
            <div class="form-group">
              <%= label_tag :end_date, "End Date" %>
              <%= date_field :end_date, "", class: "form-control" %>
            </div>
          </div>    
        </div>

        <div class="row">
          <div class="col-md-6">
            <%= image_tag "home.jpg", width: '90%', class: "rounded float-right" %>
          </div>
          <div class="col-md-6">
            <div class="form-group">
              <%= label_tag :image, "Change Image" %>
              <%= file_field_tag "Image" %>
            </div>
          </div>    
        </div>
        
      </div>

      <!-- Modal footer -->
      <div class="modal-footer">
        <%= submit_tag "Save", class: "btn btn-success" %>
        <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
      </div>
      <% end %>
    </div>
  </div>
</div>

<!-- The Modal Delete -->
<div class="modal fade" id="deleteModal">
  <div class="modal-dialog modal-sm">
    <div class="modal-content">

      <!-- Modal Header -->
      <div class="modal-header">
        <h4 class="modal-title">Delete Election</h4>
        <button type="button" class="close" data-dismiss="modal">&times;</button>
      </div>

      <!-- Modal body -->
      <div class="modal-body">
        Are you sure ?
      </div>

      <!-- Modal footer -->
      <div class="modal-footer">
        <button type="button" class="btn btn-danger" data-dismiss="modal">Delete</button>
        <button type="button" class="btn btn-dark" data-dismiss="modal">Close</button>
      </div>

    </div>
  </div>
</div>