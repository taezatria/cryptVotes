<div class="container" style="margin-top: 2%">
  <div class="row">
    <h1>Elections</h1>
  </div>

  <div class="row" style="margin-bottom: 10px">
    <div class="col-md-10">
      <div class="form-inline">
        <%= text_field_tag :search, "", class: "form-control mr-3" %>
        <%= button_tag "Search", class: "btn btn-basic" %>
      </div>
    </div>
    <div class="col-md-2">
      <button class="btn btn-basic" data-toggle="modal" data-target="#addModal">
        <span class="fa fa-plus mr-3"></span>
        Add New
      </button>
    </div>
  </div>
  <div class="row">
    <table class="table table-hover">
      <thead class="thead-light">
        <tr>
          <th>Name</th>
          <th>Description</th>
          <th>Start Date</th>
          <th>End Date</th>
          <th>Participants</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
<% all_elections.each do |election| %>
        <tr>
          <td><%= election.name %></td>
          <td><%= election.description %></td>
          <td><%= election.start_date.strftime("%A, %d %B %Y") %></td>
          <td><%= election.end_date.strftime("%A, %d %B %Y") %></td>
          <td><%= election.participants %></td>
          <td><button class="btn btn-secondary"><span class="fa fa-edit"></span></button>
          <button class="btn btn-dark"><span class="fa fa-trash"></span></button></td>
        </tr>
<% end %>
      </tbody>
    </table>
  </div>
</div>

<!-- The Modal Add -->
<div class="modal fade" id="addModal">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <%= form_tag "#", method: "get" do %>
      <!-- Modal Header -->
      <div class="modal-header">
        <h4 class="modal-title">New Election</h4>
        <button type="button" class="close" data-dismiss="modal">&times;</button>
      </div>

      <!-- Modal body -->
      <div class="modal-body">
        <div class="row">
          <div class="col-md-6">
            <div class="form-group">
              <%= label_tag :name, "Name" %>
              <%= text_field_tag :name, "", class: "form-control" %>
            </div>
          </div>
          <div class="col-md-6">
            <div class="form-group">
              <%= label_tag :participants, "Participants" %>
              <%= number_field_tag :participants, "", class: "form-control" %>
            </div>
          </div>
        </div>


          <div class="form-group">
            <%= label_tag :description, "Description" %>
            <%= text_area_tag :description, "", class: "form-control" %>
          </div>

        <div class="row">
          <div class="col-md-6">
            <div class="form-group">
              <%= label_tag :start_date, "Start Date" %>
              <%= date_field :start_date, "", class: "form-control" %>
            </div>
          </div>
          <div class="col-md-6">
            <div class="form-group">
              <%= label_tag :end_date, "End Date" %>
              <%= date_field :end_date, "", class: "form-control" %>
            </div>
          </div>    
        </div>

        <div class="row">
          <div class="col-md-6">
            <%= image_tag "home.jpg", width: '90%', class: "rounded float-right" %>
          </div>
          <div class="col-md-6">
            <label>Add Image</label>
            <div class="custom-file">
                <%= file_field_tag :image, class: "custom-file-input" %>
                <%= label_tag :image, "Choose File", class: "custom-file-label" %>
            </div>
          </div>    
        </div>
        
      </div>

      <!-- Modal footer -->
      <div class="modal-footer">
        <%= submit_tag "Submit", class: "btn btn-success" %>
        <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
      </div>
      <% end %>
    </div>
  </div>
</div>

