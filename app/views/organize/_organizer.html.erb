  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <%= form_tag "#", method: "get" do %>
      <!-- Modal Header -->
      <div class="modal-header">
        <h4 class="modal-title">Edit Organizer</h4>
        <button type="button" class="close" data-dismiss="modal">&times;</button>
      </div>

      <!-- Modal body -->
      <div class="modal-body">
        <div class="row">
          <div class="col-md-4">
            <div class="form-group">
              <%= label_tag :user_id, "User ID" %>
              <%= text_field_tag :user_id, "", class: "form-control" %>
            </div>
          </div>
          <div class="col-md-4">
            <div class="form-group">
              <%= label_tag :election_id, "Election ID" %>
              <%= text_field_tag :election_id, "", class: "form-control" %>
            </div>
          </div>
          <div class="col-md-4">
            <div class="form-group">
              <%= label_tag :access_right_id, "Access Right ID" %>
              <%= text_field_tag :access_right_id, "", class: "form-control" %>
            </div>
          </div>
        </div>

        <div class="row">
          <div class="col-md-4">
            <div class="form-group">
              <%= label_tag :name, "Name" %>
              <%= text_field_tag :name, "", class: "form-control" %>
            </div>
          </div>
          <div class="col-md-4">
            <div class="form-group">
              <%= label_tag :id_number, "ID Number" %>
              <%= text_field_tag :id_number, "", class: "form-control" %>
            </div>
          </div>
          <div class="col-md-4">
            <div class="form-group">
              <%= label_tag :phone, "Phone Number" %>
              <%= text_field_tag :phone, "", class: "form-control" %>
            </div>
          </div>
        </div>

        <div class="row">
          <div class="col-md-4">
            <div class="form-group">
              <%= label_tag :email, "E-mail" %>
              <%= text_field_tag :email, "", class: "form-control" %>
            </div>
          </div>
          <div class="col-md-4">
            <div class="form-group">
              <%= label_tag :username, "Username" %>
              <%= text_field_tag :username, "", class: "form-control" %>
