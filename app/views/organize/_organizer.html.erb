<div class="container" style="margin-top: 2%">
  <div class="row">
    <h1>Organizers</h1>
  </div>

  <div class="row" style="margin-bottom: 10px">
    <div class="col-md-7">
      <div class="form-inline">
        <%= text_field_tag :search, "", class: "form-control mr-3", placeholder: "Name" %>
        <%= button_tag "Search", class: "btn btn-basic" %>
      </div>
    </div>
    <div class="col-md-2">
      <button class="btn btn-basic" data-toggle="modal" data-target="#addModal">
        <span class="fa fa-plus mr-3"></span>
        Add New
      </button>
    </div>
    <div class="col-md-3">
      <div class="custom-file">
        <%= file_field_tag :addorganizer, class: "custom-file-input" %>
        <%= label_tag :addorganizer, "Choose File", class: "custom-file-label" %>
      </div>
    </div> 
  </div>

  <div class="row">
    <table class="table table-hover">
      <thead class="thead-light">
        <tr>
          <th>User ID</th>
          <th>Election ID</th>
          <th>Access Right ID</th>
          <th>Name</th>
          <th>ID Number</th>
          <th>E-mail</th>
          <th>Username</th>
        </tr>
      </thead>
      <tbody id="tbody_organizer">
<% all_organizers.each do |organizer| %>
  <% organizer(organizer.id).each do |org| %>
        <tr>
        <input type="hidden" id="menu" value="organizer">
        <input type="hidden" id="user_id" value="<%= organizer.id %>">
        <input type="hidden" id="other_id" value="<%= org.id %>">
          <td><%= organizer.id %></td>
          <td><%= org.election_id %></td>
          <td><%= org.access_right_id %></td>
          <td><%= organizer.name %></td>
          <td><%= organizer.idNumber %></td>
          <td><%= organizer.email %></td>
          <td><%= organizer.username %></td>
        </tr>
  <% end %>
<% end %>
      </tbody>
    </table>
  </div>
</div>

<!-- The Modal Add -->
<div class="modal fade" id="addModal">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <%= form_tag "organize/add", method: "post" do %>
      <!-- Modal Header -->
      <div class="modal-header">
        <h4 class="modal-title">New Organizer</h4>
        <button type="button" class="close" data-dismiss="modal">&times;</button>
      </div>
        
      <!-- Modal body -->
      <div class="modal-body">
        <div class="row">
          <div class="col-md-6">
            <div class="form-group">
              <%= label_tag :add_election_id, "Election" %>
              <select name="add_election_id" id="add_election_id" class="custom-select">
<% all_elections.each do |election| %>
                <option value="<%= election.id %>"><%= election.name =%></option>
<% end %>
              </select>
            </div>
          </div>
          <div class="col-md-6">
            <div class="form-group">
              <%= label_tag :add_access_right_id, "Access Right" %>
              <select name="add_access_right_id" id="add_access_right_id" class="custom-select">
<% all_access_rights.each do |access_right| %>
                <option value="<%= access_right.id %>"><%= access_right.name =%></option>
<% end %>
              </select>
            </div>
          </div>
        </div>

        <div class="row">
          <div class="col-md-6">
            <div class="form-group">
              <%= label_tag :add_name, "Name" %>
              <%= text_field_tag :add_name, "", class: "form-control" %>
            </div>
          </div>
          <div class="col-md-6">
            <div class="form-group">
              <%= label_tag :add_id_number, "ID Number" %>
              <%= text_field_tag :add_id_number, "", class: "form-control" %>
            </div>
          </div>
        </div>

        <div class="row">
          <div class="col-md-6">
            <div class="form-group">
              <%= label_tag :add_email, "E-mail" %>
              <%= text_field_tag :add_email, "", class: "form-control" %>
            </div>
          </div>
          <div class="col-md-6">
            <div class="form-group">
              <%= label_tag :add_phone, "Phone Number" %>
              <%= text_field_tag :add_phone, "", class: "form-control" %>
            </div>
          </div>
        </div>
        <%= hidden_field_tag 'menu', 'organizer' %>

      </div>

      <!-- Modal footer -->
      <div class="modal-footer">
        <%= submit_tag "Submit", class: "btn btn-success" %>
        <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
      </div>
      <% end %>
    </div>
  </div>
</div>

<!-- The Modal Edit -->
<div class="modal fade" id="editModal">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <%= form_tag "organize/alter", method: "post" do %>
      <!-- Modal Header -->
      <div class="modal-header">
        <h4 class="modal-title">Edit Organizer</h4>
        <button type="button" class="close" data-dismiss="modal">&times;</button>
      </div>

      <!-- Modal body -->
      <div class="modal-body">
        <div class="row">
          <div class="col-md-4">
            <div class="form-group">
              <%= label_tag :edit_user_id, "User ID" %>
              <%= text_field_tag :edit_user_id, "", class: "form-control", readonly: true %>
            </div>
          </div>
          <div class="col-md-4">
            <div class="form-group">
              <%= label_tag :edit_election_id, "Election" %>
              <select name="edit_election_id" id="edit_election_id" class="custom-select">
                <% all_elections.each do |election| %>
                <option value="<%= election.id %>"><%= election.name =%></option>
                <% end %>
              </select>
            </div>
          </div>
          <div class="col-md-4">
            <div class="form-group">
              <%= label_tag :edit_access_right_id, "Access Right" %>
              <select name="edit_access_right_id" id="edit_access_right_id" class="custom-select">
<% all_access_rights.each do |access_right| %>
                <option value="<%= access_right.id %>"><%= access_right.name =%></option>
<% end %>
              </select>
            </div>
          </div>
        </div>

        <div class="row">
          <div class="col-md-4">
            <div class="form-group">
              <%= label_tag :edit_name, "Name" %>
              <%= text_field_tag :edit_name, "", class: "form-control", readonly: true %>
            </div>
          </div>
          <div class="col-md-4">
            <div class="form-group">
              <%= label_tag :edit_id_number, "ID Number" %>
              <%= text_field_tag :edit_id_number, "", class: "form-control", readonly: true %>
            </div>
          </div>
          <div class="col-md-4">
            <div class="form-group">
              <%= label_tag :edit_phone, "Phone Number" %>
              <%= text_field_tag :edit_phone, "", class: "form-control", readonly: true %>
            </div>
          </div>
        </div>

        <div class="row">
          <div class="col-md-4">
            <div class="form-group">
              <%= label_tag :edit_email, "E-mail" %>
              <%= text_field_tag :edit_email, "", class: "form-control" %>
            </div>
          </div>
          <div class="col-md-4">
            <div class="form-group">
              <%= label_tag :edit_username, "Username" %>
              <%= text_field_tag :edit_username, "", class: "form-control" %>
            </div>
          </div>
        </div>

        <div class="row">
          <div class="col-md-4">
            <div class="form-group">
              <%= label_tag :edit_address, "Blockchain Address" %>
              <%= text_field_tag :edit_address, "", class: "form-control", readonly: true %>
            </div>
          </div>
          <div class="col-md-4">
            <div class="form-group">
              <%= label_tag :edit_public_key, "Blockchain Public Key" %>
              <%= text_field_tag :edit_public_key, "", class: "form-control", readonly: true %>
            </div>
          </div>
          <div class="col-md-4">
            <div style="margin-top: 24px; padding-top: 0.5rem;">
              <%= button_tag "Generate new Key", class: "btn btn-basic" %>
            </div>
          </div>
        </div>
        <input type="hidden" name="edit_org_id" id="edit_org_id">
        <%= hidden_field_tag 'menu', 'organizer' %>
      </div>

      <!-- Modal footer -->
      <div class="modal-footer">
        <button class="btn btn-danger" id="modalDeleteButton" data-dismiss="modal" data-toggle="modal" data-target="#deleteModal"><span class="fa fa-trash"></span></button>
        <%= submit_tag "Save", class: "btn btn-success" %>
        <button type="button" class="btn btn-dark" data-dismiss="modal">Close</button>
      </div>
      <% end %>
    </div>
  </div>
</div>

<!-- The Modal Delete -->
<div class="modal fade" id="deleteModal">
  <div class="modal-dialog modal-sm">
    <div class="modal-content">
      <%= form_tag "organize/discard", method: "post" do %>
      <!-- Modal Header -->
      <div class="modal-header">
        <h4 class="modal-title">Delete Organizer</h4>
        <button type="button" class="close" data-dismiss="modal">&times;</button>
      </div>

      <!-- Modal body -->
      <div class="modal-body">
        Are you sure ?
        <input type="hidden" name="delete_org_id" id="delete_org_id">
        <%= hidden_field_tag 'menu', 'organizer' %>
      </div>
      
      <!-- Modal footer -->
      <div class="modal-footer">
        <%= submit_tag "Delete", class: "btn btn-danger" %>
        <button type="button" class="btn btn-dark" data-dismiss="modal">Close</button>
      </div>
      <% end %>
    </div>
  </div>
</div>