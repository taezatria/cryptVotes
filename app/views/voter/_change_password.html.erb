<div class="container" style="margin-top: 2%">
  <div class="row">
    <h1>Change Password</h1>
  </div>

  <div class="row">
    <div class="col-sm-4">
      <%= form_tag "/voter/change_password", id: "voterchangepasswordForm", method: "post" do %>
        <div class="form-group">
          <%= label_tag :oldpassword, "Old Password" %>
          <%= password_field_tag :oldpassword, "", class: "form-control password-check", required: true %>
          <div class="invalid-feedback" hidden><span class="fa fa-times"></span> Alphanumeric min 8 characters</div>
          <div class="valid-feedback" hidden><span class="fa fa-check"></span></div>
        </div>
        <div class="form-group">
          <%= label_tag :newpassword, "New Password" %>
          <%= password_field_tag :newpassword, "", class: "form-control password-check", required: true %>
          <div class="invalid-feedback" hidden><span class="fa fa-times"></span> Alphanumeric min 8 characters</div>
          <div class="valid-feedback" hidden><span class="fa fa-check"></span></div>
        </div>
        <div class="form-group">
          <%= label_tag :retypepassword, "Re-type new Password" %>
          <%= password_field_tag :retypepassword, "", class: "form-control password-check", required: true %>
          <div class="invalid-feedback" hidden><span class="fa fa-times"></span> Alphanumeric min 8 characters</div>
          <div class="valid-feedback" hidden><span class="fa fa-check"></span></div>
        </div>
        <%= submit_tag "Submit", class: "btn btn-primary btn-block" %>
      <% end %>
    </div>
  </div>
</div>