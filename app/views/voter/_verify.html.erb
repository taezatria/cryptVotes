<div class="container" style="margin-top: 2%;">
  <div class="row">
    <h1>Individual Ballot Verification</h1>
  </div>
  <div class="row">
    <div class="col-md-12">
    <br />
      <table class="table table-hover">
        <thead class="thead-light">
          <tr>
            <th>Election</th>
            <th>Transaction ID</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody id="tbody_verify">
<% all_elections_end.each do |el| %>
          <tr>
            <td><%= el.name %></td>
            <td><button class="btn btn-secondary" data-toggle="modal" data-target="#passModal"><span class="fa fa-lock-open"></span> Open Transaction</button></td>
            <td><button class="btn btn-dark" data-toggle="modal" data-target="#passModal"><span class="fa fa-info-circle"></span> Verify</button></td>
          </tr>
<% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<div class="modal fade" id="passModal">
  <div class="modal-dialog modal-sm">
    <div class="modal-content">
      <%= form_tag "#", method: "get" do %>
      <!-- Modal Header -->
      <div class="modal-header">
        <h4 class="modal-title">Input Passphrase</h4>
        <button type="button" class="close" data-dismiss="modal">&times;</button>
      </div>

      <!-- Modal body -->
      <div class="modal-body">

        <div class="form-group">
          <%= label_tag :passphrase, "Passphrase" %>
          <%= text_field_tag :name, "", class: "form-control" %>
        </div>

      </div>

      <!-- Modal footer -->
      <div class="modal-footer">
        <%= submit_tag "Submit", class: "btn btn-success" %>
        <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
      </div>
      <% end %>
    </div>
  </div>
</div>