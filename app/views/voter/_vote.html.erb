<div class="container" style="margin-top: 2%">
  <h1>Time to Vote</h1>
  <div class="row">
    <table class="table table-hover">
      <thead class="thead-light">
        <tr>
          <th>Election</th>
          <th>Description</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td>Ketua HIMAINFRA 2018</td>
          <td>Pemilihan Ketua HIMAINFRA</td>
          <td>
          <button class="btn btn-danger" data-toggle="modal" data-target="#voteModal"><span class="fa fa-info-circle"></span> Vote !</button></td>
        </tr>
        <tr>
          <td>Ketua BEM 2018</td>
          <td>Pemilihan Ketua BEM. Pilihlah yang bijak !</td>
          <td>
          <button class="btn btn-danger" data-toggle="modal" data-target="#voteModal"><span class="fa fa-info-circle"></span> Vote !</button></td>
        </tr>
        <tr>
          <td>BPMF 2018</td>
          <td>Pemilihan BPMF. Tentukan BPMF MU SEKARANG!</td>
          <td>
          <button class="btn btn-danger" data-toggle="modal" data-target="#voteModal"><span class="fa fa-info-circle"></span> Vote !</button></td>
        </tr>
      </tbody>
    </table>
  </div>
</div>

<div class="modal fade" id="voteModal">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <%= form_tag "#", method: "get" do %>
      <!-- Modal Header -->
      <div class="modal-header">
        <h4 class="modal-title">Ballot</h4>
        <button type="button" class="close" data-dismiss="modal">&times;</button>
      </div>

      <!-- Modal body -->
      <div class="modal-body">

        <div class="row">
          <div class="col-md-4">
            <%= image_tag "person.jpg", class: "rounded-circle" %>
            <p class="text-center">Candidate 1</p>
          </div>
          <div class="col-md-4">
            <%= image_tag "person.jpg", class: "rounded-circle" %>
            <p class="text-center">Candidate 2</p>
          </div>
          <div class="col-md-4">
            <%= image_tag "person.jpg", class: "rounded-circle" %>
            <p class="text-center">Candidate 3</p>
          </div>
        </div>

      </div>

      <!-- Modal footer -->
      <div class="modal-footer">
        <div class="col-md-4">
          <%= password_field_tag :passphrase, "", class: "form-control", placeholder: "Passphrase" %>
        </div>
        <%= submit_tag "Submit", class: "btn btn-success" %>
        <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
      </div>
      <% end %>
    </div>
  </div>
</div>